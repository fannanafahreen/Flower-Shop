<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple_200"
    tools:context=".ui.home.HomeFragment">



        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@color/lavender_200">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                android:layout_height="75dp"
                android:src="@mipmap/ic_app_logo"
                android:padding="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="0.6"
            android:orientation="vertical"
            >

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="50dp">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="40dp"
                     android:layout_marginStart="15dp"
                     android:layout_marginTop="15dp"
                     android:fontFamily="@font/jacques_francois"
                     android:text="Home"
                     android:textColor="@color/purple_650"
                     android:textSize="30sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <TextView

                   android:layout_width="0dp"
                   android:layout_height="40dp"
                   android:layout_marginTop="10dp"
                   android:layout_weight="0.9"
                   android:fontFamily="@font/jacques_francois"
                   tools:text="User_Name"
                   android:layout_marginStart="15dp"
                   android:textColor="@color/purple_650"
                   android:textSize="23sp" />

            </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_settings"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:padding="8dp"
                    android:src="@mipmap/ic_settings"
                    app:tint="@color/primary_colour" />

            </LinearLayout>

    </LinearLayout>

        <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/oval"
        android:layout_marginTop="-15dp"
        >

    </LinearLayout>



    <ImageView
        android:id="@+id/btn_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:layout_marginStart="36dp"
        android:layout_marginTop="-35dp"
        android:background="@drawable/bordered_oval_lavender"
        android:baselineAligned="false"
        android:padding="16dp"
        android:src="@mipmap/ic_user"
        app:tint="@color/lavender_500" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="15dp"
        android:background="@drawable/curved_border_white">

<!--        <ImageView-->
<!--            android:layout_width="?actionBarSize"-->
<!--            android:layout_height="35dp"-->
<!--            android:src="@mipmap/ic_magnifier"-->
<!--            android:padding="5dp"-->
<!--            android:layout_gravity="center"-->
<!--            app:tint="@color/purple_500"-->
<!--            />-->


        <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search Product"
            android:textColor="@color/black" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <androidx.cardview.widget.CardView

            android:id="@+id/btn_flower_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_gravity="center|start"
            android:layout_margin="10dp"
            app:cardCornerRadius="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/img_flower_rose"
                android:orientation="vertical">



                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Flowers"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/jacques_francois"
                    android:textStyle="bold"
                    android:gravity="center|top"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/btnPlantList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_gravity="center|start"
            android:layout_margin="10dp"
            app:cardCornerRadius="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/img_pinkplant"
                android:orientation="vertical">


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Plant"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/jacques_francois"
                    android:gravity="center|top"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:id="@+id/btnFlowerJuiceList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_gravity="center|start"
            android:layout_margin="10dp"
            app:cardCornerRadius="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/img_flower_juice"
                android:orientation="vertical">


                <TextView

                    android:id="@+id/iv_product_juice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:text="Flower Juice"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/jacques_francois"
                    android:gravity="center"/>



            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="35dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"

                >

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        android:gravity="end"
        android:layout_marginEnd="20dp">

        <ImageView
            android:id="@+id/iv_btn_test"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/oval"
            android:src="@mipmap/img_bucketlogo"/>

    </LinearLayout>

</LinearLayout>

